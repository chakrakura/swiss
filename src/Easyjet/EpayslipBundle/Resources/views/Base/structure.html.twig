{% extends "@EasyjetSwissinsideCore/Base/structure.html.twig" %}
{% import "@EasyjetSwissinsideCore/Base/macros.html.twig" as macros %}

{% block specificCss %}{{ parent() }}
    
{% endblock %}



{% block title %} {{ title }}{% endblock %}
{% block header %}
    {{ parent() }}
{% endblock header %}

{% block generalMenu %}
    <div id="header">
        {{ macros.show_general_menu(generalMenuItems(), 'EPS') }}
        <a id="menu-trigger" href="#"><i class="icon-align-justify"></i></a>
    </div>    
{% endblock generalMenu %}


{% block sidebar %}
    <div id="sidebar">
        <ul>
            {% if is_granted("ROLE_SWISSINSIDE_USER") %}
            <li class="submenu {% if selectedSidebar is defined and (selectedSidebar == "EPAYSLIP") %}open active{% endif %}"><a href="#"><i class="icon-file-text"></i> <span>ePayslip</span> <i class="arrow icon-chevron-right"></i></a>
                <ul>
                    <li class="{% if selectedSidebar is defined and selectedSidebar == "EPAYSLIP" %}active current-page{% endif %}"><a href="">View paySlips</a></li>
                </ul>            
            </li>
            {% endif %}
        </ul>
    </div>

{% endblock sidebar %}

{% block container %}    	
<div id="content">
    Bienvenue dans la gestion des heures de travail
</div>            
{% endblock container %}