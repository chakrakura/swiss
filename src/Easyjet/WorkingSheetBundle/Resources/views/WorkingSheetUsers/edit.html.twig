{% extends '@EasyjetWorkingSheet/Base/structure.html.twig' %}
{% import "@EasyjetSwissinsideCore/Base/macros.html.twig" as macros %}

{% block container -%}

    <div id="content">
        <div id="content-header">
            <h1 id="titre_help">Edit the user</h1>
            <div id="description_help">Here you are able to update your user. Just fill the form in order to change your entry.</div>
        </div>
        
        <div class="row">
            <div class="col-xs-12">
                {{ macros.wizz() }}
            </div>
        </div>
        
        <div class="row">

            <div class="col-xs-12">
                <div class="widget-box">
                    <div class="widget-title">
                        <span class="icon">
                            <i class="icon-th"></i>
                        </span>
                        <h5>User details</h5>
                    </div>
                    <div class="widget-content nopadding">

                         {{ form_start(edit_form, {'attr': {'class': 'form-horizontal'}}) }}
                        <div class="widget-content nopadding">

                            {{ form_widget(edit_form, {'attr': {'class': 'form-horizontal'}} ) }}

                            <div class="form-actions">
                                <input id="submit-button" type="submit" class="btn btn-primary" />
                            </div>
                        </div>
                        {{ form_end(edit_form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
